#!/bin/sh

# Get network name
SSID="$(iw dev wlp3s0 link | awk '/SSID/ {print $2}')"

# Wifi network icon
icon=ï‡«

# Define mouse controls
case $BUTTON in
	# Right-click shows notfication with the name of the network
	3) notify-send "Network SSID: " " $icon $SSID" ;;
esac

# Print icon and netowrk name
echo "$icon $SSID"
